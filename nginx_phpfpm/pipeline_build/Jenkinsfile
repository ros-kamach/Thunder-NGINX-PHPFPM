pipeline {
    agent any
    
    stages {
        stage('Initialize') {
            steps {
                //enable remote triggers
                script {
                    properties([pipelineTriggers([pollSCM('')])])
                }
                //define scm connection for polling
                git branch: "*/${PS_GIT_REF}", url: "${PS_GIT_URI}"
            }
        }
    }
}
